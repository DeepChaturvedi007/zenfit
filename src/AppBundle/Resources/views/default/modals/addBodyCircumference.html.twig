                        <label for="bc-left-calf" class="control-label">Left calf</label>
                        <input type="text" name="left_calf" id="bc-left-calf" class="form-control"
                               placeholder="0.0">
                    </div>
                    <div class="form-group">
                        <label for="bc-right-calf" class="control-label">Right calf</label>
                        <input type="text" name="right_calf" id="bc-right-calf" class="form-control"
                               placeholder="0.0">
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-default btn-upper cancel" data-dismiss="modal" aria-label="Close">Cancel</button>
                        <button type="submit" class="btn btn-success btn-upper send">Add Record</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
