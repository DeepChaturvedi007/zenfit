<div class="modal inmodal fade sm" id="planSettingsModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Workout Plan Settings</h4>
                <span>
                        Select the workout metrics you want to input
                </span>
            </div>

            <form action="{{ path('workout_update', { 'plan': plan.id }) }}" method="POST" autocomplete="off">
                <div class="modal-body">
                    {% for fieldName, fieldChecked in planSettings.toArray %}
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="settings[{{ fieldName }}" value="1"{{ fieldChecked ? ' checked' : '' }}>
                                {{ fieldName|capitalize }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-block btn-success btn-upper">Save Settings</button>
                </div>
            </form>
        </div>
    </div>
</div>
