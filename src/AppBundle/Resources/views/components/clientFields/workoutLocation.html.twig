<div class="form-group">
    <label class="control-label">Workout Location <span class="tooltip-label" data-toggle="tooltip" data-placement="right" title="Where do you usually work out? In the gym, home etc.">?</span></label>
    <div class="form-group-in">
        <select name="workoutLocation" class="form-control" required />
            <option value="">Select Workout Location</option>
            {% for key in range(1,3) %}
               <option value="{{ key }}" {% if key == client.workoutLocation %} selected {% endif %}>
                  {{('client.survey.workoutLocations.'~key)|trans}}
               </option>
            {%- endfor %}
        </select>
    </div>
</div>
