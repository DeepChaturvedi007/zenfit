<div class="form-group">
    <label class="control-label">Experience Level</label>
    <div class="form-group-in">
        <select name="experienceLevel" class="form-control" required />
            <option value="">Select Experience Level</option>
            {% for key in range(1,3) %}
               <option value="{{ key }}" {% if key == client.experienceLevel %} selected {% endif %}>
                  {{('client.survey.workoutExperienceLevels.'~key)|trans}}
               </option>
            {%- endfor %}
        </select>
    </div>
</div>
