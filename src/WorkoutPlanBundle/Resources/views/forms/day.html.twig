<div class="modal inmodal fade sm" id="addPlanModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Add new workout day</h4>
            </div>
            <form action="{{ path('workout_day', { 'plan': plan.id }) }}" method="POST">
                <input type="hidden" name="id" value="{{ day is defined and day.id ? day.id : '' }}">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputPassword" class="control-label">Title</label>
                        <input
                                type="text"
                                name="name"
                                class="form-control"
                                value="{{ day is defined and day.name ? day.name : '' }}"
                                placeholder="Title of workout day">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-block btn-success btn-upper">Save</button>
                </div>
            </form>
        </div>

    </div>
</div>